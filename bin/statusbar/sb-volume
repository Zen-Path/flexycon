#!/bin/sh

case $BLOCK_BUTTON in
	1) setsid -f "$TERMINAL" -e pulsemixer ;;
	2) pamixer -t ;;
	4) pamixer -i 1 ;;
	5) pamixer -d 1 ;;
	3) notify-send "ðŸ“¢ Volume module" "\- Shows volume ï€¨, ïš© if muted.
- Middle click to mute.
- Scroll to change." ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

vol="$(pamixer --get-volume)"

icon="ï€¨"
[ "$(pamixer --get-mute)" = true ] && icon="ïš© "

printf "%s%2d%%\n" "$icon" "$vol"
